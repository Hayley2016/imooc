/* post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
  height: 460rpx;
}
.author-data{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 5px;
}
.author,.const-text,.data{
  margin-right: 5px;
  vertical-align: middle;
  font-size: 12px;
  color: #666;
}
.title{
  font-size: 20px;
  margin: 20rpx 30rpx;
  color: #666;
  font-weight: bold;
}
.tool{
  margin-top: 20rpx;
}
.circle{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}
.line{
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 24rpx;
  margin: 0 auto;
  z-index: -99;
}
.content{
  margin: 0px 20rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  color: #666;
}
.music{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 50%;
  margin-left: -50rpx;
  top: 180rpx;
  opacity: 0.6;
}