<template name="postItem">
  <view class="post-container">
      <view class="post-author-data">
        <image class="post-author" src="{{avatar}}"></image>
        <text class="post-data">{{date}}</text>
      </view>
      <text class="post-title">{{title}}{{index}}</text>
      <image class="post-image" src="{{imgSrc}}"></image>
      <text class="post-content">{{content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="../../images/icon/icon1.png"></image>
        <text class="post-like-font">{{reading}}</text>
        <image class="post-like-image" src="../../images/icon/icon2.png"></image>
        <text class="post-like-font">{{collection}}</text>
      </view>
    </view>
</template>